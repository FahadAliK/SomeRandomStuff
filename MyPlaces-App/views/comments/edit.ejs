<%- include('../partials/header') %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center;">
      Edit Comment
    </h1>
    <div style="width: 30%; margin: 25px auto;">
      <form
        action="/campgrounds/<%= foundCampground_id %>/comments/<%= comment._id %>?_method=PUT"
        method="POST"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            value=<%= comment.text %> 
            name="comment[text]"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">
            Submit
          </button>
        </div>
      </form>
      <a
        class="btn btn-warning btn-block"
        href="/campgrounds"
        style="margin-top: 20px;"
        >Go Back.!</a
      >
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
